<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/background_landscape">
    <TextView android:text="Connection speed:" android:textColor="#FFFFFF" android:layout_height="wrap_content" android:id="@+id/connectionspeeed" android:layout_marginLeft="30dip" android:textSize="16dip" android:layout_width="fill_parent" android:layout_marginTop="110dip"></TextView>
 
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/speed"
    android:text="Speed"
 android:layout_marginTop="10dip" android:textColor="#FFFFFF" android:textSize="16dip" android:layout_marginLeft="30dip"/>
 
 <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/progress"
    android:text="Progress"
 android:layout_marginTop="10dip" android:textColor="#FFFFFF" android:textSize="16dip" android:layout_marginLeft="30dip"/>
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/networktype"
    android:text="Network Type"
 android:layout_marginTop="10dip" android:textColor="#FFFFFF" android:textSize="16dip" android:layout_marginLeft="30dip"/>
</LinearLayout>
